{
  "compilerOptions": {
    // vscode
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    // custom
    "incremental": true,
    "declaration": true,
    "lib": ["ES2015"],
    "skipLibCheck": true,
    "module": "Preserve",
    "target": "ES2015",

    // strict
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
  },
}
